<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DayModify">

    <include
        android:id="@+id/toolbarInclude"
        layout="@layout/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="55dp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18.00sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        tools:text="2019/01/01" />
    <EditText
        android:id="@+id/title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:hint="제목을 입력하세요"
        android:inputType="textCapWords"
        android:padding="10dp"
        android:textColor="#000000"
        android:layout_marginTop="20.00dp"
        tools:ignore="MissingConstraints" />
    <ImageButton
        android:id="@+id/btn_input_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.00dp"
        android:text="날짜 정하기"
        android:layout_gravity="center"
        android:src="@drawable/today"
        android:background="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/tv_date" />
    <TextView
        android:id="@+id/tv_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.00dp"
        android:textSize="18.00sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="선택한날짜"
        />
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.00dp"
        android:textSize="18.00sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="D-day"
        />
    <Spinner
        android:id="@+id/spinnerm"
        android:layout_marginTop="10dp"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:entries="@array/lists"
        android:tooltipText="sss"
        android:spinnerMode="dialog"
        android:background="@android:color/white"
        android:layout_gravity="center"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="상단바고정"
        android:id="@+id/check1"
        android:checked="false"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints" />
</LinearLayout>